<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile Card -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_bg"
        android:padding="16dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="PHAN LÊ THÀNH CÔNG"
            android:textColor="@color/primaryColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_bg"
            android:text="Chọn"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/profile_name"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_icon"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/profile_icon"
            android:text="0945052542" />

        <ImageView
            android:id="@+id/profile_birthdate_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/profile_phone"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/profile_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_birthdate_icon"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/profile_birthdate_icon"
            android:text="16/09/2003" />

        <ImageView
            android:id="@+id/profile_address_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/profile_birthdate"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/profile_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_address_icon"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/profile_address_icon"
            android:text="189 Trần Phú, Phường Vĩnh Thanh Vân, Thành phố Rạch Giá, Tỉnh Kiên Giang" />
    </RelativeLayout>
</LinearLayout>